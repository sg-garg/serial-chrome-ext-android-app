{
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "description": "Connect with Jewel Time serial port and send commands",
  "name": "Jewel Time Alert Manager",
  "icons": { "16": "jewel-time128x128.png",
           "48": "jewel-time128x128.png",
          "128": "jewel-time128x128.png" },
  "permissions": ["serial"],
  "version": "1.0.0",
  "manifest_version": 2,
  "url_handlers": {
    "openApp": {
      "matches": [
        "https://www.jewel-time.com/schedAlerts.php"
      ],
      "title": "Open App"
    }

  }
}
